@model WHATEVER_ZAPROS.Models.User
@{
	Layout = "_LayoutSign"; ViewBag.Title = "Регистрация";
}

<form asp-action="SignUp" method="post">
	<div class="position-absolute top-50 start-50 translate-middle text-center"> 
		<div class="form-group"  style="padding:5px;">
			<input class="form-control" name="loginUser" placeholder="Логин:" required  minlength="8" maxlength="25"/>
		</div>
		<div class="form-group"  style="padding:5px;">
			<input class="form-control" name="passwordUser" placeholder="Пароль:" type="password" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,25}$"/>
		</div>
		<div class="form-group"  style="padding:5px;">
			<input class="form-control" name="email" placeholder="Em@il:" required/>
		</div>
		<div style="padding:5px;">
			<button type="submit" class="btn btn-sm btn-primary">Зарегистрироваться</button>
		</div>
		<div style="padding:5px;">
			<a asp-action="Index" class="btn btn-sm btn-secondary">Авторизация</a>
		</div>
	</div>
</form>