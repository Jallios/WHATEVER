@model WHATEVER_ZAPROS.Models.User
@{
	Layout = "_LayoutSign"; ViewBag.Title = "Восстрановление аккаунта";
}
<form asp-action="RestorePassword" method="post">
	<div class="position-absolute top-50 start-50 translate-middle text-center">
		<div class="form-group"  style="padding:5px;">
		<input class="form-control" name="Ucode" placeholder="Код:" required />
		</div>
		<div class="form-group"  style="padding:5px;">
		<input class="form-control" name="password" placeholder="Пароль:" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,25}$"/>
		</div>
		<div class="form-group"  style="padding:5px;">
		<input class="form-control" name="newpassword" placeholder="Повторите пароль:" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,25}$"/>
		</div>
		<div  style="padding:5px;">
			<button type="submit" class="btn btn-sm btn-primary">Отправить</button>
		</div>
	</div>
</form>